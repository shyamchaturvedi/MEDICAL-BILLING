<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine Stock</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f8ff;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        h1 {
            text-align: center;
            color: #0066cc;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #0066cc;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        .message {
            color: red;
            text-align: center;
            margin: 10px 0;
        }
        .edit-button {
            background-color: #ffc107;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Medicine Stock</h1>

    <% if (message) { %>
        <div class="message"><%= message %></div>
    <% } %>

    <table>
        <thead>
            <tr>
                <th>Medicine ID</th>
                <th>Rack No.</th>
                <th>Medicine Name</th>
                <th>Generic Name</th>
                <th>MRP</th>
                <th>Sell Price</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Supplier</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% medicines.forEach(medicine => { %>
                <tr>
                    <td><%= medicine.medicineId %></td>
                    <td><%= medicine.rackNo %></td>
                    <td><%= medicine.medicineName %></td>
                    <td><%= medicine.genericName %></td>
                    <td><%= medicine.mrp.toFixed(2) %></td>
                    <td><%= medicine.sellPrice.toFixed(2) %></td>
                    <td><%= new Date(medicine.expiryDate).toLocaleDateString() %></td>
                    <td><%= medicine.quantity %></td>
                    <td><%= medicine.supplier %></td>
                    <td>
                        <form action="/edit-medicine/<%= medicine._id %>" method="get">
                            <button type="submit" class="edit-button">Edit</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>